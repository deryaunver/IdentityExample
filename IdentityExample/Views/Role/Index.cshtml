@*@using Microsoft.CodeAnalysis.CSharp.Syntax*@
@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a asp-action="AddRole" asp-controller="Role" class="btn btn-info btn-sm my-2"> Yeni Rol Ekle</a>
<table class=" table table-sm table-hover">
    <tr >
        <td> Rol Türü </td>
        <td>İşlem Türü</td>
    </tr>
    @if (Model.Count>0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-action="UpdateRole" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Güncelle</a>
                    <a asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td class="text-danger"> Sistemde Kayıtlı Rol Bulunmamaktadır!</td>
        </tr>
    }
</table>

