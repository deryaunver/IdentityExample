@model List<AppUser>
@{
    ViewData["Title"] = "UserLİst";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class=" table table-sm table-hover">
    <tr>
        <td>Ad</td>
        <td>Roller</td>
        <td>İşlem </td>
    </tr>
    @if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <rolgoster user-id="@item.Id"></rolgoster>
                </td>
                <td>
                    <a asp-action="AssignRole" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Rol Ata</a>
                    @*<a asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>*@
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td class="text-danger"> Sistemde Kayıtlı Rol Bulunmamaktadır!</td>
        </tr>
    }
</table>





